<% @tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.content %></td>
    <% unless Favorite.exists?(tweet_id: tweet, user_id: current_user.id) %>
       <td><%= link_to "お気に入り登録", add_tweet_path(tweet), method: :post %></td>
       <% else %>
       <td><%= link_to "お気に入り解除", delete_tweet_path(tweet), method: :delete %></td>
       <% end %>
    <% if tweet.user_id == current_user.id%>
      <td><%= link_to 'Edit', edit_tweet_path(tweet), remote: true %></td>
      <td><%= link_to 'Destroy',  tweet_delete_path(tweet),remote: true%></td>
    <% end %>
  </tr>
<% end %>
